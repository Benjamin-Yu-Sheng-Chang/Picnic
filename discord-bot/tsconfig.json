{
  "compilerOptions": {
    // Modern JS
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],

    // Emit compiled code
    "outDir": "dist",
    "rootDir": "src",
    "noEmitOnError": true,
    "allowJs": true,
    "declaration": false,

    // Module resolution for Bun
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,

    // Strictness
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Source map (optional for debugging)
    "sourceMap": true,

    // JSX if using React in frontend
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
